<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:background="@color/colorPrimary"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".6">
    <TextView
        android:id="@+id/verNombreCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre"/>
    <TextView
        android:id="@+id/verCelCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="celular"/>
    <TextView
        android:id="@+id/verActividadCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="actividad"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/verMontoCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="monto"/>
    <ImageView
        android:id="@+id/verFinalizadaCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_box_outline_blank"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".3">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Empleados"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
    <ImageButton
        android:id="@+id/editarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create_white_24dp"
        android:layout_weight="0.4"
        android:layout_margin="8dp"/>
        <ImageButton
            android:id="@+id/eliminarCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_white_24dp"
            android:layout_weight=".4"
            android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>